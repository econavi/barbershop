.footer
	margin-top 65px
	background #232323 url('../assets/img/general/pattern-black.jpg')
	
	&__wrapper
		container()
		clearfix()
		padding-top 60px
		padding-bottom 40px
	
	&__contacts
		float left
		width 320px
		margin-right 60px
	
	&__link
		text-decoration underline
		
		&:hover
			text-decoration none
		
		&:active
			text-decoration underline
			
	&__social
		float left
		width 180px
		
	&__copiright
		float right
		width 140px
		text-align center