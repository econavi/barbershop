-
	var list = [
		{url: 'javascript:void(0);', name: 'Информация'},
		{url: 'javascript:void(0);', name: 'Новости'},
		{url: '/price-list/', name: 'Прайс-лист'},
		{url: 'javascript:void(0);', name: 'Магазин'},
		{url: 'javascript:void(0);', name: 'Контакты'}
	];

mixin navItem(url, name)
	li.main-menu__item
		a.main-menu__link(href=url)= name


nav.main-menu
	.main-menu__logo
		include ../logo-inner/logo-inner.pug
	ul.main-menu__list
		each i in list
			+navItem(i.url, i.name)
