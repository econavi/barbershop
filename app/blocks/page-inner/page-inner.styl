.page-inner
	container()
	margin-bottom 65px
	
	&__title
		margin-top -5px
		margin-bottom 15px
		
	&__breadcrumbs
		margin-bottom 45px
		
	&__slogan-wrap
		text-align center
		margin-bottom 60px
		
		&::after
			content ''
			display block
			position relative
			top -25px
			z-index 1
			border-bottom 2px solid #000
		
	&__slogan
		position relative
		display inline-block
		padding 0 25px
		z-index 2
		background #f8f5f2 url('../assets/img/general/pattern-white.jpg')
		
	&__title-section
		//margin-top 60px
		margin-bottom 30px
		
		&_short
			padding-right 220px
	
	&__text-section
		margin-bottom 14px
		
		&_short
			padding-right 80px
		
	&__columns
		clearfix()
		margin-bottom 45px
		
	&__column-left
		float left
		width 460px
		
	&__column-right
		float right
		width 460px
		





