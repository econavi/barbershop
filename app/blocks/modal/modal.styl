.modal
	display none
	
	&_open
		display block
	
	&__window
		position fixed
		top 120px
		left 50%
		width 460px
		margin-left -230px
		padding 45px 27px
		color #000
		background #f8f5f2 url('../assets/img/general/pattern-white.jpg')
		z-index 1100
	
	&__close-btn
		position absolute
		top 0
		right -34px
		width 22px
		height 22px
		border 0
		outline 0
		cursor pointer
		background none
		
		
		&::before, &::after
			content ''
			position absolute
			top 10px
			left 2px
			width 19px
			height 4px
			background #d0d0d0
			border-radius 1px
		
		&::before
			transform rotate(45deg)
		
		&::after
			transform rotate(-45deg)
		
		&:hover::before, 
		&:hover::after
			background #fff
	
	&__blur
		position fixed
		width 100%
		height 100%
		top 0
		left 0
		background rgba(0, 0, 0, 0.8)
		z-index 900
